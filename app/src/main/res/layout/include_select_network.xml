<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_include_select_network"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/adbid_10dp"
    android:background="@drawable/bg_white">

    <RelativeLayout
        android:id="@+id/rl_select_network"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <View
            android:id="@id/line1"
            android:layout_width="@dimen/adbid_line_width"
            android:layout_height="@dimen/adbid_line_height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/adbid_padding"
            android:background="@color/adbid_0042DF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/adbid_padding"
            android:layout_toRightOf="@id/line1"
            android:text="@string/adbid_select_network"
            android:textColor="@android:color/black"
            android:textSize="@dimen/adbid_title_size" />

    </RelativeLayout>

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rl_select_network"
        android:background="@color/adbid_EDEDED" />

    <LinearLayout
        android:id="@+id/ll_right"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/adbid_60dp"
        android:layout_below="@id/line2"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinner_2"
            android:layout_width="180dp"
            android:layout_height="@dimen/adbid_60dp"
            android:spinnerMode="dropdown"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/ck_auto_load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="Auto Load"
            android:textSize="@dimen/adbid_title_size"
            android:textColor="@android:color/black"
            android:theme="@style/style_checkBox"
            android:layout_margin="@dimen/adbid_12dp"
            android:layout_gravity="center"/>
    </LinearLayout>

    <Spinner
        android:id="@+id/spinner_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/adbid_60dp"
        android:layout_below="@id/line2"
        android:layout_toLeftOf="@id/ll_right"
        android:spinnerMode="dropdown" />


</RelativeLayout>
